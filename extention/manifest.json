{
    "manifest_version": 3,
    "name": "Youtube Cloud Comment",
    "version": "1.0",
    "description": "Youtube Cloud Comment",
    "permissions": ["scripting", "webRequest"],
    // "background": {
    //     "service_worker": "background.js"
    // },
    // "action": {
    //     "default_popup": "popup.html"
    // },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]
}
